            android:layout_margin="3dp"
            android:gravity="center_vertical|center"
            android:padding="4dp"
            android:textColor="?android:attr/textColorPrimary">
        </TextView>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mc4"
        android:layout_weight="1"
